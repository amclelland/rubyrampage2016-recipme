<table class="table-minimal">
  <thead>
    <tr>
      <th class="name">Name</th>
      <th class="quantity">Quantity</th>
      <th>Unit</th>
      <th class="action"></th>
      <th class="action"></th>
    </tr>
  </thead>
  <tbody>
    <% ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td class="quantity"><%= ingredient.quantity %></td>
        <td><%= ingredient.unit %></td>
        <td class="action">
          <%= link_to edit_meal_ingredient_path(ingredient.meal, ingredient) do %>
            <%= fa_icon 'pencil' %>
          <% end %>
        </td>
        <td class="action">
          <%= link_to meal_ingredient_path(ingredient.meal, ingredient), method: :delete, data: { confirm: 'Are you sure you want to delete this ingredient?' } do %>
            <%= fa_icon 'times' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
